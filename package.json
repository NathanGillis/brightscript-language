{
  "name": "brightscript",
  "version": "0.1.0",
  "description": "Suite of language tools for Roku's BrightScript language.",
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf out && tsc",
    "watch": "rimraf out && tsc --watch",
    "prepublishOnly": "npm run build",
    "tslint": "tslint './src/**/*.ts' --outputAbsolutePaths",
    "test": "nyc mocha \"src/**/*.spec.ts\" --full-trace",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "files": [
    "dist/**/*",
    "brsconfig.schema.json"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "brsc": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TwitchBronBron/brightscript.git"
  },
  "author": "",
  "license": "ISC",
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chokidar": "^1.7.5",
    "@types/command-line-args": "^5.0.0",
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.9.0",
    "@types/request": "^2.47.0",
    "@types/sinon": "^7.0.4",
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "codecov": "^3.1.0",
    "command-line-usage": "^5.0.5",
    "coveralls": "^3.0.0",
    "mocha": "^5.2.0",
    "node-run-cmd": "^1.0.1",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.10",
    "testdouble": "^3.5.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "typescript": "^3.2.4"
  },
  "dependencies": {
    "brs": "0.13.0-rc.3",
    "chalk": "^2.4.2",
    "chokidar": "^2.0.4",
    "clear": "^0.1.0",
    "command-line-args": "^5.0.2",
    "cross-platform-clear-console": "^2.3.0",
    "debounce-promise": "^3.1.0",
    "fs-extra": "^7.0.1",
    "moment": "^2.23.0",
    "roku-deploy": "^2.0.0",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageclient": "^5.2.1",
    "vscode-languageserver": "^5.2.1",
    "vscode-uri": "^1.0.6",
    "xml2js": "^0.4.19"
  }
}
